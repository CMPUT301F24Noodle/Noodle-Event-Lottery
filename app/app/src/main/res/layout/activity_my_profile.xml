<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Profile"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/profile_full_name_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="first and last name"/>

    <TextView
        android:id="@+id/profile_email_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="email"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Facility"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/profile_facility_name_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Facility Name"/>

    <TextView
        android:id="@+id/profile_facility_location_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Facility Location"/>
    <TextView
        android:id="@+id/profile_facility_organizer_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Facility Organizer"/>

    <!-- horizontal layout for facility buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/create_facility_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:text="Add Facility"
            android:visibility="visible" />

        <Button
            android:id="@+id/edit_facility_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"
            android:clickable="true"
            android:text="Edit Facility"/>

        <Button
            android:id="@+id/delete_facility_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"
            android:clickable="true"
            android:text="Remove Facility"/>
    </LinearLayout>

</LinearLayout>
