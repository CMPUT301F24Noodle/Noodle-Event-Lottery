<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Title"
            android:textColor="@color/text_cyan"
            android:fontFamily="@font/alexandria_semibold"
            android:textSize="18sp"
            android:padding="8dp"
             />

        <EditText
            android:id="@+id/edit_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Date (yyyy-MM-dd)"
            android:textColor="@color/text_cyan"
            android:fontFamily="@font/aleo_medium"
            android:textSize="18sp"
            android:padding="8dp"

            android:inputType="date" />

        <EditText
            android:id="@+id/edit_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Time (hh:mm AM/PM)"
            android:textColor="@color/text_cyan"
            android:fontFamily="@font/aleo_medium"
            android:textSize="18sp"
            android:padding="8dp"

            android:inputType="time" />

        <EditText
            android:id="@+id/edit_event_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Details"
            android:fontFamily="@font/aleo_medium"
            android:textSize="18sp"
            android:padding="8dp"

            android:gravity="start|top"
            android:lines="4"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:textColor="@color/text_cyan" />

        <EditText
            android:id="@+id/edit_organizer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Organizer Name"
            android:fontFamily="@font/aleo_medium"
            android:textSize="18sp"
            android:padding="8dp"

            android:textColor="@color/text_cyan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/belanosima"
                android:background="@drawable/mybutton" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/belanosima"
                android:background="@drawable/mybutton" />

            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:fontFamily="@font/belanosima"
                android:background="@drawable/mybutton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
