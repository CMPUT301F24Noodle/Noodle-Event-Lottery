<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back_gray"
    android:id="@+id/user_metrics">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- User Information Section -->
        <TextView
            android:id="@+id/metric_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/belanosima"
            android:text="@string/user_name"
            android:textAlignment="center"
            android:textColor="@color/text_cyan"
            android:textSize="46sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/metric_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/placeholderpfp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="PFP" />

        <!-- Entrant Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_cyan"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrant"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_cyan"
            android:fontFamily="@font/belanosima"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_cyan"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">


            <TextView
                android:id="@+id/metric_pasta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/aleo_medium"
                android:text="Pasta Ratio: 0.0"
                android:textColor="@color/text_cyan"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/metric_entered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events Currently Entered: 0"
                android:textColor="@color/text_cyan"
                android:textSize="18dp"
                android:fontFamily="@font/aleo_medium"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/metric_entered_life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events Entered (Lifetime): 0"
                android:textColor="@color/text_cyan"
                android:textSize="18dp"
                android:fontFamily="@font/aleo_medium"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/metric_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Success Rate: 0%"
                android:textSize="18dp"
                android:fontFamily="@font/aleo_medium"
                android:textColor="@color/text_cyan"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/metric_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/text_cyan"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/text_cyan"
                android:fontFamily="@font/belanosima"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/text_cyan"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/metric_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of Events Created: 0"
                    android:textColor="@color/text_cyan"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/metric_org_enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of People Who Applied: 0"
                    android:textColor="@color/text_cyan"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/metric_org_winner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of People Who Participated: 0"
                    android:textColor="@color/text_cyan"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/metric_org_avgenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Number of Entrants Per Event: 0"
                    android:textColor="@color/text_cyan"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/metric_org_avgdecline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average Declines Per Event: 0"
                    android:textColor="@color/text_cyan"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/metric_org_decrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Decline Rate: 0%"
                    android:textSize="18dp"
                    android:fontFamily="@font/aleo_medium"
                    android:textColor="@color/text_cyan"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
