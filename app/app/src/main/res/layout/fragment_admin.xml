<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.admin.AdminFragment">
<!--    layout file for the admin fragment-->

    <LinearLayout
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nav_admin_profile"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/belanosima"
            android:layout_gravity="center"
            android:text="PROFILE"
            android:textStyle="bold"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/nav_admin_event"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/belanosima"
            android:layout_gravity="center"
            android:text="EVENT"
            android:background="@drawable/mybutton"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/nav_admin_qr"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/belanosima"
            android:layout_gravity="center"
            android:text="QR CODE"
            android:textStyle="bold"
            android:background="@drawable/mybutton"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/nav_admin_img"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:fontFamily="@font/belanosima"
            android:layout_gravity="center"
            android:text="IMAGE"
            android:textStyle="bold"
            android:background="@drawable/mybutton"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>