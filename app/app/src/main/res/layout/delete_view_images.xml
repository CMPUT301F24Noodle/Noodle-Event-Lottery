<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <ImageView
        android:id="@+id/full_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/placeholderpfp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/edit_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/belanosima"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/delete_picture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Delete"
            android:fontFamily="@font/belanosima"
            android:background="@drawable/mybutton"/>
        <Button
            android:id="@+id/picture_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:fontFamily="@font/belanosima"
            android:background="@drawable/mybutton"/>
    </LinearLayout>

</LinearLayout>