<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/back_gray</item>
        <item name="colorPrimary">@color/fore_purple</item>
        <item name="colorOnPrimary">@color/bonus_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fore_purple</item>
        <item name="colorOnSecondary">@color/bonus_yellow</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fore_purple</item>
        <item name="rippleColor">@color/accent_pink</item> <!-- Optional ripple effect -->
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/back_gray</item>
    </style>

    <style name="MyNavigationViewTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/bonus_yellow</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/bonus_yellow</item> <!-- Title color -->
        <item name="android:colorControlNormal">@color/bonus_yellow</item>
        <item name="android:fontFamily">@font/belanosima</item>
    </style>

</resources>